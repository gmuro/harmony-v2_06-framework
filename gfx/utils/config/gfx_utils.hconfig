file GFXU_IMAGE_RAW_EXTERNAL_C "$HARMONY_VERSION_PATH/framework/gfx/utils/src/gfxu_image_raw_external.c" to "$PROJECT_SOURCE_FILES/framework/gfx/utils/gfxu_image_raw_external.c"
