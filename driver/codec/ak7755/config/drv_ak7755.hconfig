file DRV_CODEC_AK7755_I2C_MAPPING_H "$HARMONY_VERSION_PATH/framework/driver/codec/ak7755/drv_codec_i2c_mapping.h" to "$PROJECT_HEADER_FILES/framework/driver/codec/ak7755/drv_codec_i2c_mapping.h"
